<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal">

    <com.mikepenz.iconics.view.IconicsImageView
        android:id="@+id/btn_decrease_10"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="?selectable_list_drawable"
        android:padding="16dp"
        app:iiv_color="?colorAccent"
        app:iiv_icon="cmd_chevron_double_left"
        app:iiv_size="18dp" />

    <com.mikepenz.iconics.view.IconicsImageView
        android:id="@+id/btn_decrease"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="?selectable_list_drawable"
        android:padding="16dp"
        app:iiv_color="?colorAccent"
        app:iiv_icon="cmd_chevron_left"
        app:iiv_size="18dp" />

    <EditText
        android:id="@+id/myNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:digits="0123456789"
        android:inputType="number"
        android:padding="16dp"
        android:textStyle="bold" />


    <com.mikepenz.iconics.view.IconicsImageView
        android:id="@+id/btn_increase"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="?selectable_list_drawable"
        android:padding="16dp"
        app:iiv_color="?colorAccent"
        app:iiv_icon="cmd_chevron_right"
        app:iiv_size="18dp" />

    <com.mikepenz.iconics.view.IconicsImageView
        android:id="@+id/btn_increase_10"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="?selectable_list_drawable"
        android:padding="16dp"
        app:iiv_color="?colorAccent"
        app:iiv_icon="cmd_chevron_double_right"
        app:iiv_size="18dp" />

</LinearLayout>